<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:weightSum="1" 
	android:background="#00000000">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

    	<RelativeLayout
    	    android:id="@+id/idea_child_header"
    	    android:layout_width="fill_parent"
    	    android:layout_height="60dp" >

    		<ImageView
    		    android:id="@+id/idea_child_header"
    		    android:layout_width="fill_parent"
    		    android:layout_height="fill_parent"
    		    android:background="@drawable/navbar_red" />

    		<TextView
    		    android:id="@+id/idea_child_text"
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"
    		    android:layout_centerVertical="true"
				android:layout_centerInParent="true"
    		    android:layout_marginTop="10dp"
				android:shadowColor="#888"
				android:shadowDx="1.5"
				android:shadowDy="1.5"
				android:shadowRadius="1.5"
    		    android:textColor="@color/white"
    		    android:textSize="20dp" />

    	</RelativeLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_weight="3"
			android:layout_height="0dp">
			<EditText android:id="@+id/edittext1"
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:gravity="center"
				android:layout_weight="1"/>
			<View
				android:layout_width="1dp"
				android:layout_height="fill_parent"
				android:background="@android:color/darker_gray" />
			<EditText android:id="@+id/edittext2"
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:gravity="center"
				android:layout_weight="1"/>
			<View
				android:layout_width="1dp"
				android:layout_height="fill_parent"
				android:background="@android:color/darker_gray" />
			<EditText android:id="@+id/edittext3"
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:gravity="center"
				android:layout_weight="1"/>
		</LinearLayout>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_weight="3"
			android:layout_height="0dp">
			<EditText android:id="@+id/edittext4"
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:gravity="center"
				android:layout_weight="1"/>
			<View
				android:layout_width="1dp"
				android:layout_height="fill_parent"
				android:background="@android:color/darker_gray" />
			<EditText android:id="@+id/edittext5"
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:gravity="center"
				android:hint="テーマ"  
				android:layout_weight="1"/>
			<View
				android:layout_width="1dp"
				android:layout_height="fill_parent"
				android:background="@android:color/darker_gray" />
			<EditText android:id="@+id/edittext6"
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:gravity="center"
				android:layout_weight="1"/>
		</LinearLayout>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_weight="3"
			android:layout_height="0dp">
			<EditText android:id="@+id/edittext7"
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:gravity="center"
				android:layout_weight="1"/>
			<View
				android:layout_width="1dp"
				android:layout_height="fill_parent"
				android:background="@android:color/darker_gray" />
			<EditText android:id="@+id/edittext8"
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:gravity="center"
				android:layout_weight="1"/>
			<View
				android:layout_width="1dp"
				android:layout_height="fill_parent"
				android:background="@android:color/darker_gray" />
			<EditText android:id="@+id/edittext9"
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:gravity="center"
				android:layout_weight="1"/>
		</LinearLayout>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_weight="2"
			android:gravity="center_vertical"
			android:layout_height="0dp">
			<ImageView
				android:id="@+id/popup_menu"
				android:layout_width="0dp"
				android:layout_height="70dp"
				android:layout_weight="1"
				android:src="@drawable/map5" />
			<Button
				android:id="@+id/save_btn"
				android:layout_width="0dp"
				android:layout_height="50dp"
				android:layout_weight="1"
				android:textColor="@color/white"
				android:textSize="16sp"
				android:background="@drawable/android_editbtn"
				android:text="@string/dummy_button" />
			<Button
				android:id="@+id/all_view_btn"
				android:layout_width="0dp"
				android:layout_height="50dp"
				android:layout_weight="1"
				android:textColor="@color/white"
				android:textSize="16sp"
				android:background="@drawable/android_editbtn"
				android:text="@string/dummy_button" />
		</LinearLayout>
    	<RelativeLayout
    	    android:id="@+id/driver_info_menu_bottom"
    	    android:layout_width="fill_parent"
    	    android:layout_height="@dimen/menu_bottom_height"
			android:layout_above="@+id/adView" >
    	    <include layout="@layout/menu_bottom" />
    	</RelativeLayout>
	    <com.google.ads.AdView
			android:id="@+id/adView"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			ads:adUnitId="a1525d7894c16f5"
			ads:adSize="BANNER"
			ads:loadAdOnCreate="true" />
	</LinearLayout>
</RelativeLayout>
