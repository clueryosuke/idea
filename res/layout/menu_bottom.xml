<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/menu_bottom_height"
    android:layout_gravity="bottom" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:id="@+id/menu_layout_1"
            android:layout_width="@dimen/menu_bottom_item_width"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/menu_active" >

            <ImageView
                android:id="@+id/menu_bottom_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/tabbar_home_2_1"
                android:clickable="true"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/menu_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/menu_text_margin_bottom"
                android:textColor="@color/white"
                android:textSize="@dimen/menu_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menu_layout_2"
            android:layout_width="@dimen/menu_bottom_item_width"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/menu_normal" >

            <ImageView
                android:id="@+id/menu_bottom_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/tabbar_defaultmap_1_2"
                android:clickable="true"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/menu_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/menu_text_margin_bottom"
                android:textColor="@color/white"
                android:textSize="@dimen/menu_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menu_layout_3"
            android:layout_width="@dimen/menu_bottom_item_width"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/menu_normal" >

            <ImageView
                android:id="@+id/menu_bottom_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/tabbar_bookmark_1_3"
                android:clickable="true"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/menu_text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/menu_text_margin_bottom"
                android:textColor="@color/white"
                android:textSize="@dimen/menu_text_size" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
